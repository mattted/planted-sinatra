<h4 class="flash"><%= flash[:message] %></h4>
<form action='/fertilizer-events' method='post'>
  <div class="card">
    <h4 class="card-header">Add Fertilizer Events</h4>
    <div class="water-all-date">
      <label for="date">Fertilizer Date</label><br>
      <input type="date" id="date" name="fevent[date]" required><br>
      <label for="date">Notes</label><br>
      <input type="text" id="notes" name="fevent[notes]"><br>
      <input type="submit" value="submit">
    </div>
    <div class="card-grid-seven">
        <% @plants.each do |plant| %>
          <div class="grid-item">   
            <strong><p class="card-info-selection"><%= plant.name %></p></strong>
            <p class="card-info-selection" style="color: #81a1c1"><%= plant.fdue_in_on %></p>
            <input type=checkbox name=plants[pid][] value="<%=plant.id%>">
          </div>
        <% end %>
    </div>
  </div>
</form>
