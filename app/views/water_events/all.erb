<div class="container">
  <a href="/home">Home</a>
  <a href="/plants/<%= @plant.id.to_s %>">Plant</a>
  <a href="/plants/<%=@plant.id.to_s %>/new-water-event">New Water Event</a>

  <h2><%= @plant.name %> Water Events</h2>
  <h4><%= flash[:message] %></h4>

  <div>
    <div class="content">
      <table>
        <tr>
          <th>Date</th>
          <th>Notes</th>
        </tr>
        <% @wevents.each do |wevent| %>
          <tr>
            <td><%= wevent.date %></td>
            <td><%= wevent.notes %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>

</div>
