<h4><%= flash[:message] %></h4>
<div class="card">
  <h3>Recently Added / Updated Plants</h3>
  <div class="card-grid">
  <% @rec_plants.each do |plant| %>
    <div class="grid-item">   
      <h4 style='text-align:center'><%= plant.name %></h4>
      <p><strong>Common Name:</strong></p>
      <p><%= plant.cname %></p>
      <p><strong>Scientific Name</strong></p>
      <p><%= plant.sci_name %></p>
      <p><strong>Date Acquired/Planted:</strong></p>
      <p><%= plant.date %></p>
      <div class="card-links">
        <a href="/plants/<%=plant.id%>/edit" class="card-links">Edit</a>
      </div>
    </div>
  <% end %>
  </div>
</div>

<div class="card">
  <h3>Due/Overdue for Watering</h3>
  <div class="card-grid">
    <% @overdue_plants.each do |plant| %>
      <div class="grid-item">   
        <h4 style="text-align:center"><%= plant.name %></h4>
        <li><%= plant.due_in_on %></li>
        <li>Water Date: <%= plant.water_due %></li>
        <div class="card-links">
          <a href="/plants/<%=plant.id%>/edit">Edit</a>
        </div>
      </div>
    <% end %>
  </div>

</div>
